<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AplicacaoNave" parent="Base.Theme.AplicacaoNave">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="Theme.AplicacaoNave.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AplicacaoNave.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AplicacaoNave.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>